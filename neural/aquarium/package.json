{
  "name": "neural-aquarium",
  "version": "0.3.0",
  "private": false,
  "description": "Visual IDE for Neural DSL with integrated debugger",
  "main": "electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "axios": "^1.4.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.4",
    "web-vitals": "^2.1.4",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@electron/notarize": "^2.1.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder -mwl",
    "release": "npm run build && electron-builder --publish always"
  },
  "keywords": [
    "neural",
    "dsl",
    "debugger",
    "ide",
    "machine-learning"
  ],
  "author": "Neural DSL Team",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000",
  "build": {
    "appId": "com.neuraldsl.aquarium",
    "productName": "Neural Aquarium",
    "copyright": "Copyright Â© 2024 Neural DSL Team",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publisherName": "Neural DSL Team",
      "verifyUpdateCodeSignature": false,
      "certificateFile": "${WIN_CSC_LINK}",
      "certificatePassword": "${WIN_CSC_KEY_PASSWORD}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Neural Aquarium",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "LICENSE"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Neural Aquarium"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "provisioningProfile": "${MAC_PROVISIONING_PROFILE}",
      "notarize": {
        "teamId": "${APPLE_TEAM_ID}"
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "background": "build/background.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icons",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "desktop": {
        "Name": "Neural Aquarium",
        "Comment": "Visual IDE for Neural DSL",
        "GenericName": "Neural Network IDE",
        "Keywords": "neural;dsl;ide;machine-learning;deep-learning",
        "Categories": "Development;IDE;",
        "StartupWMClass": "neural-aquarium"
      },
      "synopsis": "Visual IDE for Neural DSL with integrated debugger",
      "description": "Neural Aquarium is a comprehensive visual IDE for the Neural DSL language, featuring an integrated debugger, shape propagation visualization, and AI assistant."
    },
    "appImage": {
      "license": "LICENSE"
    },
    "deb": {
      "priority": "optional",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "rpm": {
      "fpmOptions": [
        "--rpm-rpmbuild-define=_build_id_links none"
      ],
      "depends": [
        "libXScrnSaver"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "neural-dsl",
        "repo": "neural-dsl",
        "releaseType": "release"
      }
    ]
  }
}
