network ViT {
  input: (224, 224, 3)
  layers:
    Conv2D(64, (7,7), strides=2) @ "cuda:0"
    TransformerEncoder(num_heads=8, ff_dim=512) {
      Conv2D(32, (3,3))
      Dense(128)
    } * 12
    GlobalAveragePooling2D()
    Dense(1000, "softmax")
  loss: "categorical_crossentropy"
  optimizer: "Adam(learning_rate=1e-4)"
  train {
    epochs: 300
    batch_size: HPO(range(128, 512, step=64))
  }
}
